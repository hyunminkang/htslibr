HTSLIB_DIR=htslib

.PHONY: all htslib copy_headers

INCLUDE_DIR=${R_PACKAGE_DIR}/inst/include

all: htslib copy_headers

htslib:
	$(warning "now building libhts.so")
	cd $(HTSLIB_DIR) && $(MAKE) -f "${R_HOME}/etc/Makeconf" -f Makefile

PKG_LIBS= -lhts -Lhtslib -Wl,-Bsymbolic-functions -Wl,-z,relro
CXX_STD = CXX11
PKG_CPPFLAGS = -Ihtslib -DSTRICT_R_HEADERS
